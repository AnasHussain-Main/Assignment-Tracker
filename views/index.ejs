<%- include('partials/header') %>

<h2>Add Your Assignments below!</h2>

<!-- Form to Add a New Assignment -->
<section>
  <h3>Add New Assignment</h3>
  <form action="/assignments" method="POST" style="max-width: 600px; margin: 20px auto;">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      required
      placeholder="Enter assignment title"
      style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;"
    >

    <label for="description">Description:</label>
    <textarea
      id="description"
      name="description"
      required
      placeholder="Enter assignment description"
      style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;"
    ></textarea>

    <label for="dueDate">Due Date:</label>
    <input
      type="date"
      id="dueDate"
      name="dueDate"
      required
      style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;"
    >

    <button
      type="submit"
      style="background-color: #007BFF; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; margin-top: 10px;"
    >
      Add Assignment
    </button>
  </form>
</section>

<!-- List of Existing Assignments -->
<section>
  <h3>Existing Assignments</h3>
  <% if (assignments.length > 0) { %>
    <ul style="max-width: 600px; margin: 20px auto; padding: 0; list-style-type: none;">
      <% assignments.forEach(assignment => { %>
        <li
          style="background: #f9f9f9; border: 1px solid #ccc; padding: 15px; margin-bottom: 10px; border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);"
        >
          <strong>Title:</strong> <%= assignment.title %><br>
          <strong>Description:</strong> <%= assignment.description %><br>
          <strong>Due Date:</strong> <%= assignment.dueDate.toDateString() %><br>

          <!-- Edit Button -->
          <form
            action="/assignments/<%= assignment._id %>/edit"
            method="GET"
            style="margin-top: 10px; display:inline;"
          >
            <button
              type="submit"
              style="background-color: #FFC107; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;"
            >
              Edit
            </button>
          </form>

          <!-- Delete Button -->
          <form
            method="POST"
            action="/assignments/<%= assignment._id %>?_method=DELETE"
            style="margin-top: 10px; display:inline;"
            onsubmit="return confirm('Are you sure you want to delete this assignment?');"
          >
            <button
              type="submit"
              style="background-color: red; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;"
            >
              Delete
            </button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p style="text-align: center; color: #555;">No assignments available. Add one above!</p>
  <% } %>
</section>

<%- include('partials/footer') %>



