<%- include('../partials/header') %>

<h2>Edit Assignment</h2>
<form action="/assignments/<%= assignment._id %>?_method=PUT" method="POST" style="max-width: 600px; margin: 20px auto;">
  <label for="title">Title:</label>
  <input
    type="text"
    id="title"
    name="title"
    value="<%= assignment.title %>"
    required
    style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;"
  >

  <label for="description">Description:</label>
  <textarea
    id="description"
    name="description"
    required
    style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;"
  ><%= assignment.description %></textarea>

  <label for="dueDate">Due Date:</label>
  <input
    type="date"
    id="dueDate"
    name="dueDate"
    value="<%= assignment.dueDate.toISOString().split('T')[0] %>"
    required
    style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;"
  >

  <button type="submit" style="background-color: #007BFF; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">Update Assignment</button>
</form>


<%- include('../partials/footer') %>
