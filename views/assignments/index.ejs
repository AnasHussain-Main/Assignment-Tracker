<%- include('../partials/header') %>

<main>
    <h2>Add Your Assignments below!</h2>

    <!-- Form to Add a New Assignment -->
    <section class="main">
        <form action="/assignments" method="POST">
            <label for="title">Title:</label>
            <input
                type="text"
                id="title"
                name="title"
                required
                placeholder="Enter assignment title"
            >

            <label for="description">Description:</label>
            <textarea
                id="description"
                name="description"
                required
                placeholder="Enter assignment description"
            ></textarea>

            <label for="dueDate">Due Date:</label>
            <input
                type="date"
                id="dueDate"
                name="dueDate"
                required
            >

            <button type="submit">
                Add Assignment
            </button>
        </form>
    </section>

    <!-- Link to Collection Page -->
    <section class="collection-button">
        <a href="/assignments/collection">
            <button>
                View Assignment Collection
            </button>
        </a>
    </section>
</main>






