<%- include('../partials/header') %>

<h2>Assignment Collection</h2>

<!-- List of Assignments -->
<section>
  <h3>All Assignments</h3>
  <% if (assignments.length > 0) { %>
    <ul style="max-width: 600px; margin: 20px auto; padding: 0; list-style-type: none;">
      <% assignments.forEach(assignment => { %>
        <li
          style="background: #f9f9f9; border: 1px solid #ccc; padding: 15px; margin-bottom: 10px; border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);"
        >
          <strong>Title:</strong> <%= assignment.title %><br>
          <strong>Description:</strong> <%= assignment.description %><br>
          <strong>Due Date:</strong> <%= assignment.dueDate.toDateString() %><br>

          <!-- Edit Button -->
          <form
            action="/assignments/<%= assignment._id %>/edit"
            method="GET"
            style="margin-top: 10px; display:inline;"
          >
            <button
              type="submit"
              style="background-color: #FFC107; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;"
            >
              Edit
            </button>
          </form>

          <!-- Delete Button -->
          <form
            method="POST"
            action="/assignments/<%= assignment._id %>?_method=DELETE"
            style="margin-top: 10px; display:inline;"
            onsubmit="return confirm('Are you sure you want to delete this assignment?');"
          >
            <button
              type="submit"
              style="background-color: red; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;"
            >
              Delete
            </button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p style="text-align: center; color: #555;">No assignments found in the collection.</p>
  <% } %>
</section>

<%- include('../partials/footer') %>

